#shopify-section-{{ section.id }} form[id^="ContactForm"] [type="submit"],
#shopify-section-{{ section.id }} form[id^="ContactForm"] .button[type="submit"],
#shopify-section-{{ section.id }} form[id^="ContactForm"] button[type="submit"] {
  display:inline-flex !important;
  align-items:center !important;
  justify-content:center !important;
  min-width:7.5rem !important;
  height:3.6rem !important;
  padding:0 .9rem !important;
  font-weight:700 !important;
  font-size:1.05rem !important;
  line-height:1 !important;
  border:0 !important;
  cursor:pointer !important;
  text-decoration:none !important;
  color:#ff4f2f !important;

  border-radius: 70% 70% 50% 50% / 95% 95% 45% 45% !important; /* pointy top */

  background:linear-gradient(
    to bottom,
    #ffffff 0%,
    #ffffff 35%,
    #ffaf0f 35%,
    #ffaf0f 70%,
    #ff4f2f 70%,
    #ff4f2f 100%
  ) !important;

  box-shadow:0 10px 24px rgba(255,175,15,.25),
             0 0 0 3px rgba(255,175,15,.15) inset !important;

  transition:transform .15s ease, box-shadow .15s ease, filter .15s ease !important;
}
